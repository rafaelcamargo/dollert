{
  "manifest_version": 2,
  "name": "Dollert",
  "description": "Get notified when dollar reaches the value you are looking for",
  "version": "0.2.0",
  "browser_action": {
    "default_icon": "popup-icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.min.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "icon_16x16.png",
    "48": "icon_48x48.png",
    "128": "icon_128x128.png"
  },
  "permissions": [
    "alarms",
    "notifications",
    "storage"
  ]
}